name:                sparkle
version:             0.1
license:             AllRightsReserved
author:              Tweag I/O
maintainer:          alp.mestanogullari@tweag.io
copyright:           2016 Tweag I/O Ltd
build-type:          Simple
cabal-version:       >=1.10

library
  c-sources: cbits/Java.c
  cc-options: -Wall
  include-dirs: cbits
  install-includes: Java.h Closure_stub.h
  ghc-options: -fPIC -shared -dynamic -threaded -Wall
  exposed-modules:
    Control.Distributed.Spark
    Control.Distributed.Spark.Closure
    Control.Distributed.Spark.JNI
  build-depends:
    base >=4.8 && <4.9,
    binary,
    binary-serialise-cbor,
    bytestring,
    containers,
    distributed-closure,
    inline-c

  hs-source-dirs:      src
  default-language:    Haskell2010
